<%- include('../../partials/head.ejs') %>

<body>    
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Editar artigo</h2>
            </div>
            <div class="card-body">
                <form  method="POST" action="/articles/update" name="id">
                    <input type="hidden" value="<% article.id %>">
                    <input 
                    class="form-control mt-3" 
                    type="text" 
                    name="title" 
                    placeholder="Defina o tÃ­tulo do artigo" 
                    id="articleTitle"><br>
                    <textarea 
                        id="article" 
                        name="body" 
                        class="form-control mt-3" 
                        placeholder="Comece por aqui...">
                    </textarea>
                    <br>
                    <label>Categorias</label>
                    <select 
                        class="form-control mt-2" 
                        name="category" id="">
                        <% categories.forEach((category) => { %>

                            <% if(category.id === article.categoryId) { %> 
                                <option 
                                    value="<%= category.id %>" 
                                    selected>
                                    <%= category.title %> 
                                </option>
                            <% } else { %>
                                <option 
                                    value="<%= category.id %>"> 
                                    <%= category.title %> 
                                </option>
                            <% } %> 
                        <% }) %>
                    </select>
                    <button  type="submit" class="btn btn-success mt-4">Atualizar</button>
                </form>
            </div>

        </div>
    </div>

    <div id="artTitle" style="display: none;">
        <%- article.title %> 
    </div>
    <div id="content" style="display: none;">
        <%- article.body %> 
    </div>

</body>

<%- include('../../partials/end.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>

<script>

    let title = document.querySelector('#artTitle').innerText 
    let content = document.querySelector('#content').innerHTML

    document.querySelector("#articleTitle").value = title

    console.log(content, title)

    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ], 
        init_instance_callback: () => {
            tinymce.get("article").setContent(content).html()

        }


    })
</script>