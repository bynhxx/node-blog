<%- include('../../partials/head.ejs') %>

<body>    
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <h2 class="mt-4">Artigos</h2>
        <hr>

        <table class="table table-bordered mt-">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Category</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                
                    <tr> 
                        <td> <%= article.id %> </td>
                        <td> <%= article.title %> </td>
                        <td> <%= article.slug %> </td>
                        <td> <%= article.category.title %> </td>
                        <td>
                            <form method="POST" action="/articles/delete"  style="display: inline" onsubmit="confirmDelete(event, this)">
                                <input type="hidden" name="id" value="<%= article.id %>"> 
                                <button class="btn btn-danger"> excluir </button>
                            </form>
                        </td>
                    </tr>
                    
                <% }) %>
            </tbody>
        </table>
        <a href="/admin/articles/new" class="btn btn-success">Criar novo artigo</a>
    </div>
</body>

<%- include('../../partials/end.ejs') %>

<script>
    function confirmDelete(e, form){
        e.preventDefault()
        let decision = confirm("Deseja mesmo deletar este artigo?")
        if(decision){
            form.submit()
        } 
    }
</script>
