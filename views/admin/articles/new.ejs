<%- include('../../partials/head.ejs') %>

<body>    
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">
                <form  method="POST" action="/articles/save">
                    <input class="form-control mt-3" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" id=""><br>
                    <textarea id="article" name="body" class="form-control mt-3" placeholder="Comece por aqui..."></textarea>
                    <br>
                    <label>Categorias</label>
                    <select class="form-control mt-2" name="category" id="">
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>"> <%= category.title %> </option>

                        <% }) %>
                    </select>
                    <button  type="submit" class="btn btn-success mt-4">Cadastrar</button>
                </form>
            </div>

        </div>
    </div>
</body>

<%- include('../../partials/end.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>